@model IEnumerable<ToDoList_Jefremov_.Models.ToDo>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isDone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!item.isDone)
                {
                    @Html.DisplayFor(modelItem => item.Name)
                    @Html.DisplayFor(modelItem => item.Date)
                    @Html.DisplayFor(modelItem => item.Description)
                }
                else
                {
                <div class="CompletedToDo">
                    @Html.DisplayFor(modelItem => item.Name), @Html.DisplayFor(modelItem => item.Date),
                    @Html.DisplayFor(modelItem => item.Description)
                </div>
                    
                }
                </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.isDone,new { id=item.Id, @class = "ActiveCheck"})
            </td>
            <td>
                @Html.ActionLink("Edit","Edit",new { id = item.Id }) |
                @Html.ActionLink("Delete","Delete", new { Id = item.Id})
            </td>
        </tr>
    }

</table>

<script src="~/Custom_Scripts/AddCheckBoxListener.js"></script>

